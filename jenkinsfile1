pipeline {
    agent any

    stages {
        stage('define parameter') {
            steps{
                script {
                    properties([
                        parameters([
                            choice(
                                choices: ["dev", "uat", "prod"],
                                name: "ENVIRONMENT"
                            ),
                        ])
                    ])
                }
            }
        }
        
        stage('Print parameter') {
            steps {
                echo "Choice parameter is $ENVIRONMENT"
            }
        }
    }
}
